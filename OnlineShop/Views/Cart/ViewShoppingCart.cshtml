@using OnlineShop.Models
@model IEnumerable<KeyValuePair<OnlineShop.Models.Product, Int32>>

@{
    ViewBag.Title = "ViewShoppingCart";
}

<h2>Your shopping cart
</h2>

<p>
    @{
        if (Session["message"] != null){
            @: Your cart is empty
        }
    }
</p>


<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Key.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Key.Price)
        </th>
        <th>
            Quantity
        </th>
        <th>

        </th>
        <th></th>
    </tr>

    @foreach (var item in Model){
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Key.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Key.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Value)
            </td>
        </tr>
    }
</table>
<p>
    Total price: @ViewBag.totalPrice @Html.ActionLink("Buy", "BuyProductsFromCart")
</p>
<p>
    @Html.ActionLink("Back","BackToProducts")
</p>

